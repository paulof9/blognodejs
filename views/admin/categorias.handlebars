<h2 class="text-4xl">>Lista de categorias</h2>
<hr class="m-4 bg-slate-300 h-1 w-full">
<a href="/admin/categorias/add">
    <button type="button" class="bg-blue-500 text-white font-bold py-2 px-4 mb-4 rounded hover:bg-blue-600 transition duration-300">
    Nova categoria</button>
</a>

{{#each categorias}}
    <div class="bg-white shadow-md rounded-lg overflow-hidden mb-4">
        <div class="p-4">
            <h4 class="font-bold">{{nome}}</h4>
            <small>{{slug}}</small>
        </div>
</div>

{{else}}

{{/each}}