{{#each erros}}
<div class="flex items-center bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <strong class="mr-2 font-bold">Erro!</strong>
    <span class="flex-1">{{this.texto}}</span> <!-- Use "this" para acessar o texto do erro -->
    <button class="absolute top-0 right-0 mt-2 mr-2 text-red-500 hover:text-red-700" onclick="this.parentElement.style.display='none'">
        &times;
    </button>
</div>
{{else}}
