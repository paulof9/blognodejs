{{#if success_msg}}
    <div class="flex items-center bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
    <strong class="mr-2 font-bold">Tudo certo!</strong>
    <span class="flex-1">{{success_msg}}</span> <!-- Use "this" para acessar o texto do erro -->
    <button class="absolute top-0 right-0 mt-2 mr-2 text-green-500 hover:text-green-700" onclick="this.parentElement.style.display='none'">
        &times;
    </button>
</div>
{{/if}}

{{#if error_msg}}
    <div class="flex items-center bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <strong class="mr-2 font-bold">Erro!</strong>
    <span class="flex-1">{{error_msg}}</span> <!-- Use "this" para acessar o texto do erro -->
    <button class="absolute top-0 right-0 mt-2 mr-2 text-red-500 hover:text-red-700" onclick="this.parentElement.style.display='none'">
        &times;
    </button>
</div>
{{/if}}